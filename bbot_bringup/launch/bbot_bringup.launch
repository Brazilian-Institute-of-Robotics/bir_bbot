<launch>
    <!-- Config -->
    <param name="robot_description" textfile="$(find bbot_description)/urdf/bbot.urdf.xacro" />  

    <!-- Load the controllers -->
    <param name="robot_description" textfile="$(find bbot_description)/urdf/bbot.urdf.xacro" /> 
    <node name="bbot_node" pkg="bbot_bringup" type="bbot_control_node" ns="/bbot" output="screen"/>
    <include file="$(find bbot_control)/launch/bbot_control.launch"/>

    <!-- Load imu topics -->
    <include file="$(find mpu6050_driver)/launch/mpu6050_driver_with_filter.launch" ns="/bbot"/>

</launch>